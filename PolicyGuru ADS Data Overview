| stats values(connections{}.left.facets{}.country) as sourcecountry by guid
| search sourcecountry != "United States"
| stats count by sourcecountry
| sort -count
| head 10</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
